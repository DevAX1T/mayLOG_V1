{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "declaration": false,
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./out/src",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
        "sourceRoot": "/",
        "inlineSources": true,
        "baseUrl": "./"
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "./**/*.ts",
        "src/global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "out"
    ],
}